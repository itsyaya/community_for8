<h1>Edit User Roles</h1>

<%= form_with(model: @user, url: update_roles_user_path(@user), method: :patch) do |form| %>
  <% User::ROLES.each do |role| %>
    <label>
      <%= check_box_tag 'user[role_ids][]', role, @user.has_role?(role) %>
      <%= role.capitalize %>
    </label>
    <br>
  <% end %>

  <%= form.submit 'Update Roles' %>
<% end %>
