<!-- app/views/posts/index.html.erb -->
<h1>Posts Index</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %>
      <span>Posted by <%= post.user.name %> on <%= post.created_at.strftime('%B %d, %Y') %></span>
    </li>
  <% end %>
</ul>

<%= link_to 'Create New Post', new_post_path %>
